source 'https://github.com/CocoaPods/Specs.git'

# Uncomment this line to define a global platform for your project
platform :ios, '8.0'
# Uncomment this line if you're using Swift
use_frameworks!

target 'PercentageCalculator' do
	pod 'SVProgressHUD', '~> 2.0.3' # Progress indicator - https://github.com/SVProgressHUD/SVProgressHUD
	pod 'Alamofire', '~> 3.4' # HTTP networking library written in Swift - https://github.com/Alamofire/Alamofire
	pod 'SwiftyJSON', '~> 2.3.2' #JSON parsing by Swift - https://github.com/SwiftyJSON/SwiftyJSON
end

target 'PercentageCalculatorTests' do

end

